@model IEnumerable<Schedule.Entities.Timetable>
@{
    ViewData["Title"] = "Home Page";
}

<div class="big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Расписание</h2>
            </div>
        </div>
    </div>
</div>

<div class="content-area">
    <div class="container">
        <div class="row gy-4">
            @if (User.Identity != null && !User.Identity.IsAuthenticated)
            {
                <div class="content-center">
                    <h2>Добро пожаловать</h2>
                    <p>Чтобы начать работу с расписаниями создайте учетную запись или войдите в уже существующую</p>
                </div>
                <div class="reg-log-menu">
                    <a class="button" asp-controller="Account" asp-action="Login">Вход</a>
                    <a class="button" asp-controller="Account" asp-action="Register">Регистрация</a>
                </div>
            }
            else
            {
                @if (Model.Count() != 0)
                {
                    @foreach (var timetable in Model)
                    {
                        <div class="col-lg-3">
                            <div class="single-schedule-element">
                                <div class="small-title-area schedule-name">
                                    <p>@timetable.TimetableName</p>
                                </div>
                                <p class="schedule-stat">Cотрудников: <span>@(timetable?.Employees?.Count ?? 0)</span></p>
                                <p class="schedule-stat">Cмен: <span>@(timetable?.Shifts?.Count ?? 0)</span></p>
                                <a class="button" asp-controller="Timetable" asp-action="EditTimetable" asp-route-id="@timetable?.Id">Редактировать</a>
                            </div>
                        </div>
                    }

                    <div class="col-lg-3">
                        <a asp-controller="Timetable" asp-action="AddTimetable">
                            <div class="new-schedule-element">
                                <img src="/img/addNew.png" width="128" height="128" alt="Добавить">
                            </div>
                        </a>
                    </div>
                }
                else
                {
                    <div class="content-center">
                        <h2>Вот холера :(</h2>
                        <p>Кажеться, вы еще не создавали расписания, но вы можете это сделать сейчас!</p>
                        <a class="button" asp-controller="Timetable" asp-action="AddTimetable">Создать новое расписание</a>
                    </div>
                }
            }
        </div>
    </div>
</div>
